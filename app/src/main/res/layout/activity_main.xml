<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->

        <!-- Container for switching between App List and Settings -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurface"
            android:elevation="0dp"
            android:minHeight="?attr/actionBarSize" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- App List View (default visible) -->
            <LinearLayout
                android:id="@+id/layoutAppList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Search Bar -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:boxBackgroundMode="filled"
                    app:startIconDrawable="@android:drawable/ic_menu_search"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"

                    style="@style/Widget.Material3.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/search_apps"
                        android:inputType="text"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <FrameLayout
                    android:id="@+id/appsListContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <!-- Real list -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvApps"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingBottom="80dp" />

                    <!-- Shimmer overlay (blocks touches) -->
                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:clickable="true"
                        android:focusable="true"
                        android:clipToPadding="false"
                        android:paddingBottom="80dp"
                        app:shimmer_auto_start="false">

                        <!-- 8 skeleton rows -->
                        <LinearLayout
                            android:id="@+id/skeletonList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp">

                            <include layout="@layout/item_app_skeleton" />
                            <include layout="@layout/item_app_skeleton" />
                            <include layout="@layout/item_app_skeleton" />
                            <include layout="@layout/item_app_skeleton" />
                            <include layout="@layout/item_app_skeleton" />
                            <include layout="@layout/item_app_skeleton" />
                            <include layout="@layout/item_app_skeleton" />
                            <include layout="@layout/item_app_skeleton" />

                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>

                </FrameLayout>


            </LinearLayout>

            <!-- Settings View (hidden by default) -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/layoutSettings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:paddingBottom="80dp"
                android:clipToPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Settings content -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/settings_about"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="?android:textColorPrimary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/app_name_version"
                                android:textSize="14sp"
                                android:textColor="?android:textColorSecondary"
                                android:layout_marginTop="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/about_AppDualZuku"
                                android:textSize="12sp"
                                android:textColor="?android:textColorSecondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Placeholder for future settings -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/coming_soon"
                        android:textAlignment="center"
                        android:textColor="?android:textColorSecondary"
                        android:padding="32dp" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </FrameLayout>

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?attr/colorSurface"
        android:elevation="8dp"
        app:menu="@menu/menu_bottom_nav"
        app:labelVisibilityMode="labeled" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>